@page
@using AspNetCore.ReCaptcha
@using Microsoft.AspNetCore.Localization
@using Microsoft.Extensions.Options
@inject IOptions<ReCaptchaSettings> ReCaptchaSettings
@model WebApplication13.Pages.ContactModel
@{
    ViewData["Title"] = "Contact";
}
<h1>@ViewData["Title"]</h1>

<p>Send us a contact form!</p>
<p>@TempData["Message"]</p>

<script>
    function submitForm() {
        document.forms[0].submit();
    }
</script>



<form method="post">
    <div asp-validation-summary="All"></div>

    <div class="form-group">
        <label asp-for="Login" class="control-label"></label>
        <textarea asp-for="Login" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label asp-for="Password" class="control-label"></label>
        <input asp-for="Password" class="form-control" />
    </div>

    <div class="form-group">
        <recaptcha class-name="btn btn-primary" callback="submitForm" text="Submit Invisible ReCaptcha" />
    </div>
</form>