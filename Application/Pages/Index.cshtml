@page
@using AspNetCore.ReCaptcha
@using Microsoft.AspNetCore.Localization
@using Microsoft.Extensions.Options
@model dynamic

<script>
    function submitForm() {
        document.forms[0].submit();

    }
</script>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>AverageAnimeEnjoyer</title>
    <link rel="stylesheet" href="styles.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
    <script src="/func.js"></script>
</head>
<body>
    <div class="back_grd">
        <div class="form-box">
            <div class="button-box">
                <div id="btn"></div>
                <button class="click-button" type="button" onclick="login()">LogIn</button>
                <button class="click-button" type="button" onclick="register()">Register</button>
            </div>
            <form id="login" class="input-elem" method="post">
                <label>
                    <input type="text" class="input-field" placeholder="Login" required>
                </label>
                <label>
                    <input type="password" class="input-field" placeholder="Password" name="password" required>
                    <span>
                        <i class="fa fa-eye " id="font" onclick="togglePW()" aria-hidden="true"></i>
                    </span>
                </label>
                <button type="submit" class="submit-button" name="Login2" asp-page-handler="Login2">Submit</button>
                <button type="reset" class="reset-button">Reset</button>
                <div class="container">
                    <input type="checkbox" id="toggle-button" class="toggle-button">
                    <label for="toggle-button" class="text">SecurityLogin</label>
                </div>
            </form>
            <form id="register" class="input-elem" method="post">
                <label>
                    <input type="text" class="input-field" placeholder="Login" name="registerModel.Name" required>
                </label>
                <label>
                    <input type="password" class="input-field" placeholder="Password" name="registerModel.Password" required>
                    <span>
                        <i class="fa fa-eye " id="font_2" onclick="togglePW_2()" aria-hidden="true"></i>
                    </span>
                </label>
                <button type="submit" class="submit-button" name="Register2" asp-page-handler="Register2">Submit</button>
                <button type="reset" class="reset-button">Reset</button>
            </form>
        </div>
    </div>

    <script>
        const x = document.getElementById("login");
        const y = document.getElementById("register");
        const z = document.getElementById("btn");

        function login() {
            x.style.left = "50px";
            y.style.left = "450px";
            z.style.left = "0px";
        }

        function register() {
            x.style.left = "-400px";
            y.style.left = "50px";
            z.style.left = "110px";
        }
    </script>

   
</body>
</html>